<view><block wx:for="{{orderList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['openStragetyDetail',['$0'],[[['orderList','',index,'strategyId']]]]]]]}}" class="order" bindtap="__e"><view class="order-number"><view class="number-left"><image class="avatar" src="{{item.userAvatar}}" mode="widthFix"></image><text>{{item.userName}}</text></view><view class="{{['number-right',item.status==3?'green':item.status==2?'blue':'red']}}">{{''+item.day+'天'}}</view></view><view class="mx-2"><view class="mt-1"><text class="row1" style="font-size:32rpx;color:#000000;">{{item.strategyTitle}}</text></view><view class="mt-2 mb-1"><text style="color:dimgrey;font-size:28rpx;">{{item.strategyDesc}}</text></view><view class="order-item"><text style="color:dimgrey;">{{item.time}}</text></view></view><view class="order-bom"><block wx:for="{{item.topicList}}" wx:for-item="item" wx:for-index="index"><view index="{{index}}"><view class="order-bom-left">{{"#"+item.topicName}}</view></view></block><view class="order-bom-right"><view class="box2">{{"点赞"+item.strategyLikeCount}}</view><view class="box3">{{"收藏"+item.strategyCollectCount}}</view></view></view></view></block></view>