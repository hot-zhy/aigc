
.xiaosikaifa_add {
	/*悬浮的加号*/
	/*基础*/
	position: fixed;
	/*相对于手机屏幕布局*/
	z-index: 99;
	/*叠层设置*/
	/*设置内部加号居中*/
	display: flex;
	align-items: center;
	justify-content: center;
	/*宽高*/
	width: 90rpx;
	height: 90rpx;
	/*位于屏幕的位置（可根据需求改）*/
	bottom: 30px;
	right: 50rpx;
	/*圆形（若需要正方形的加号可以去掉此样式）*/
	border-radius: 40px;
	/*四边阴影（让加号看起来有立体感）*/
	box-shadow: #808080 0px 0px 4px;
	/*加号大小*/
	font-size: 65rpx;
}
.xiaosikaifa_add_list {
	position: fixed;
	bottom: 90px;
	right: 50rpx;
	z-index: 98;
	display: flex;
	flex-direction: column-reverse;
	align-items: flex-end;
	line-height: 50px;
	background-color: #FFFFFF;
	border-radius: 10px;
	padding-left: 10px;
	padding-right: 10px;
}
.xiaosikaifa_add_list_item {
	display: flex;
	align-items: center;
	font-size: 15px;
	/* padding-top: 20px; */
	color: #555500;
}
.xiaosikaifa_add_list_item image {
	margin-left: 15px;
	width: 45px;
	height: 45px;
}
.xiaosikaifa_camouflage {
	/*遮慕层*/
	/*基础*/
	position: fixed;
	/*相对于手机屏幕布局*/
	width: 100%;
	height: 100%;
	top: 0;
	z-index: 97;
	/*叠层设置(（注意：值一定要比悬浮加号低）)*/
	/*遮慕背景色*/
	background-color: rgba(0, 0, 0, 0.4);
}

